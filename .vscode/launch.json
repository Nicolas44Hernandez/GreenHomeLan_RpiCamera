    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server Camera: Run flask app in dev post",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "server_camera/server/app:create_app()",
                "FLASK_ENV": "development",
            },
            "args": [
                "run",
                "--no-reload",
            ]
        },
    ]
}
